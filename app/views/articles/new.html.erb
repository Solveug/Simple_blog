<div class="container">
  <h1>New article</h1>

  <%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control", placeholder: "Text input", style: "width: 600px"%>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "form-control", rows: "6", style: "width: 600px" %>
    </p>
    <p>
      <%= f.submit "Save Article", class: "btn btn-primary" %>
    </p>
  <% end %>
</div>
